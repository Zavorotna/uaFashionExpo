mixin clothingItem(imageSrc, altText, label)
    div.catecory_card
        span.mask.category_mask
        picture
            img(src=imageSrc, alt=altText)
        p.abs_text= label



mixin participantsItem(imageSrc, altText, label)
    div
        picture
            img(src=imageSrc, alt=altText)
        if(label)
            if (label == "LILIYA")
                p.abs_text= label
                    span.tiny_text Китай
            else 
                p.abs_text= label